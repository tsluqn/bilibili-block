{
  "name": "bilibili评论区屏蔽工具",
  "version": "1.0.0",
  "description": "添加关键词来屏蔽b站评论",
  "permissions":["storage", "tabs"],
  "background":{
    "scripts":["utils.js", "background.js"]
  },
  "browser_action":{
    "default_popup":"popup.html",
    "default_icon": "icon/logo.png"
  },
  "options_page": "options.html",
  "content_scripts":[{
    "matches":["<all_urls>"],
    "js":["utils.js", "content.js"],
    "run_at": "document_start"
  }],
  "icons": {
    "48": "icon/logo.png"
  },
  "homepage_url": "https://github.com/tsluqn/bilibili-comment-filter",
  "manifest_version": 2
}