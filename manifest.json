{
  "name": "bilibili屏蔽助手",
  "version": "1.0.0",
  "description": "关键词屏蔽b站评论",
  "permissions":["storage", "tabs"],
  "background":{
    "scripts":["utils.js", "background.js"]
  },
  "browser_action":{
    "default_popup":"popup.html",
    "default_icon": "bb.png"
  },
  "options_page": "options.html",
  "content_scripts":[{
    "matches":["<all_urls>"],
    "js":["utils.js", "content.js"],
    "run_at": "document_start"
  }],
  "icons": {
    "48": "bb.png"
  },
  "manifest_version": 2
}